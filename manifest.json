{
  "manifest_version": 2,
  "name": "SAME",
  "description": "",
  "version": "1.0",
  "icons": {
    "128":"img/icon.png"
    },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Open SAME interface"
  },
  "options_page": "../options/options.html",
  "background": {
    "scripts": ["background.js", "worker.js"],
    "persistent": true
  },
  "content_scripts": [
      {
          "matches": ["*://meet.google.com/*", "*://us05web.zoom.us/*", "*://zoom.us/*", "*://teams.microsoft.com/*", "*://music.youtube.com/*"],
          "js": ["js/content.js"]
      }
  ],
  "permissions": [
    "tabCapture",
    "audioCapture",
    "downloads",
    "storage",
    "activeTab",
    "scripting",
    "desktopCapture",
    "tabs"
  ],
  "externally_connectable": {
       "matches": ["*://meet.google.com/*", "*://us05web.zoom.us/*", "*://zoom.us/*", "*://teams.microsoft.com/*", "*://music.youtube.com/*"]
  },
  "commands": {
    "start": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+U"
      },
      "description": "Start Capture"
    },
    "stop": {
      "suggested_key": {
        "default": "Ctrl+Shift+X",
        "mac": "MacCtrl+Shift+X"
      },
      "description": "Stop Capture"
    }
  }
}
